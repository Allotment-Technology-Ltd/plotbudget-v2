{
  "name": "plotbudget-v2",
  "version": "1.6.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "pnpm": {
    "overrides": {
      "@supabase/supabase-js": "2.94.1",
      "node-forge": ">=1.3.2",
      "tar": ">=7.5.8",
      "diff": ">=8.0.3",
      "minimatch": ">=10.2.1",
      "styled-components": "npm:@sanity/css-in-js@6.2.1"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:polar": "bash scripts/dev-with-polar-cli.sh",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky",
    "code-review": "node scripts/code-review.mjs",
    "create-polar-products": "pnpm --filter @repo/web run create-polar-products",
    "check-updates": "bash scripts/check-updates.sh"
  },
  "lint-staged": {
    "*": "bash -c 'pnpm lint && pnpm type-check'"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.3",
    "@types/node": "^20.19.33",
    "chalk": "^5.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semantic-release": "^23.1.1",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "server-only": "^0.0.1",
    "zod": "^3.25.76"
  }
}
